<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/save_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save/Load Settings"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="30dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" />

        <Switch
            android:id="@+id/defaultSwitch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/pink"
            android:text="Set as Default Settings"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_title"
            tools:layout_editor_absoluteY="134dp" />
        <!--<EditText
            android:id="@+id/settings_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:inputType="text"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/background_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_title" />-->

        <Spinner
            android:id="@+id/fileSpinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/defaultSwitch"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp" />

        <!--<AutoCompleteTextView
            android:id="@+id/settings_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:inputType="text"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/background_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/save_title" />-->


        <Button
            android:id="@+id/s_settings"
            android:layout_width="135dp"
            android:layout_height="58dp"
            android:background="@color/brightBlue"
            android:text="Save Settings"
            app:layout_constraintTop_toBottomOf="@+id/fileSpinner"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/l_settings"
            android:layout_width="135dp"
            android:layout_height="58dp"
            android:layout_marginRight="32dp"
            android:background="@color/brightBlue"
            android:text="Load Settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fileSpinner"
            app:layout_constraintVertical_bias="0.0" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>